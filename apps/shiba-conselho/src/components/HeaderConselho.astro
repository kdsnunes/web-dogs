---
interface Props { title?: string; logoSrc?: string }
const { title = "Conselho da Raça Shiba Inu do Brasil", logoSrc }: Props = Astro.props;
---
<header class="shiba-header">
  <div class="container">
    <a href="/" class="brand" aria-label="Página inicial">
      {logoSrc ? (
        <img src={logoSrc} alt="Logotipo" class="logo-img" width="28" height="28" />
      ) : (
        <span class="logo">柴</span>
      )}
      <span class="name">{title}</span>
    </a>

    <nav class="nav nav-desktop">
      <a href="/sobre">O Conselho</a>
      <a href="/departamentos">Departamentos</a>
      <a href="/eventos">Eventos</a>
      <a href="/contato">Contato</a>
    </nav>

    <details class="menu">
      <summary class="hamburger" aria-label="Abrir menu">
        <span class="sr">Abrir menu</span>
        <span></span>
        <span></span>
        <span></span>
      </summary>
      <nav class="nav nav-mobile">
        <a href="/sobre">O Conselho</a>
        <a href="/departamentos">Departamentos</a>
        <a href="/eventos">Eventos</a>
        <a href="/contato">Contato</a>
      </nav>
    </details>
  </div>
</header>

<style>
  .shiba-header {
    position: sticky;
    top: 0;
    z-index: 50;
  }
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 14px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }
  .brand {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: #fff;
  }
  .logo {
    font-family: ui-serif, "Hiragino Mincho ProN", "Yu Mincho", serif;
    font-size: 24px;
    line-height: 1;
    color: var(--accent);
  }
  .logo-img {
    height: 28px;
    width: auto;
    display: block;
  }
  .name {
    font-family: "Shippori Mincho B1", serif;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.3px;
  }

  .nav-desktop { display: none; margin-left: auto; gap: 16px; }
  .menu { display: block; margin-left: auto; position: relative; }

  .nav a {
    color: rgba(255,255,255,0.6);
    text-decoration: none;
    font-family: "Noto Serif JP", serif;
    font-size: 0.9rem;
    letter-spacing: 0.2px;
    padding: 6px 10px;
    transition: color 0.2s ease;
  }
  .nav a:hover {
    color: #fff;
  }

  @media (max-width: 960px) {
    .nav-desktop { display: none; }
    .menu .nav { display: none; }
    .menu[open] .nav {
      display: flex;
      position: absolute;
      right: 0;
      top: calc(100% + 8px);
      background: var(--ink-blue);
      border: 1px solid rgba(255,255,255,0.1);
      padding: 10px;
      flex-direction: column;
      gap: 4px;
      min-width: 220px;
    }
    .menu .nav a { padding: 8px 12px; }
  }

  @media (min-width: 961px) {
    .nav-desktop { display: inline-flex; }
    .menu { display: none; }
  }

  .hamburger {
    width: 32px;
    height: 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: rgba(255,255,255,0.8);
  }
  .hamburger::-webkit-details-marker { display: none; }
  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: currentColor;
    border-radius: 1px;
    transition: all 0.3s ease;
  }
  .hamburger:hover span:nth-child(2) { opacity: 0.6; }
  .menu[open] > .hamburger span:nth-child(1) { transform: translateY(8px) rotate(45deg); }
  .menu[open] > .hamburger span:nth-child(2) { opacity: 0; }
  .menu[open] > .hamburger span:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

  .sr {
    position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px;
    overflow: hidden; clip: rect(0,0,0,0); white-space: nowrap; border: 0;
  }
</style>
