<style>
  .meta p {
    margin: 0.3rem 0;
    color: var(--text-muted);
  }
  .meta strong {
    color: var(--text-main);
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }
  th, td {
    text-align: left;
    padding: 0.6rem 0;
    border-bottom: 1px solid var(--border);
    font-size: 0.95rem;
  }
  th {
    font-weight: 600;
    color: var(--text-muted);
    width: 180px;
    vertical-align: top;
    padding-right: 1rem;
  }
  td {
    color: var(--text-main);
  }

  .event-photo {
    width: 100%;
    height: auto;
    margin-top: 1.5rem;
    display: block;
  }
  .event-photos {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }
  @media (min-width: 720px) {
    .event-photos { grid-template-columns: 1fr 1fr; }
  }
  .event-photos .event-photo {
    margin-top: 0;
  }

  .event-link-row {
    margin-top: 1.5rem;
  }

  .fotos-status {
    margin-top: 1.5rem;
    color: var(--text-muted);
    font-style: italic;
  }
</style>
