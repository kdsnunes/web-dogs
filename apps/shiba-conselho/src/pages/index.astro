---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Conselho da Raça Shiba Inu — Brasil">

  <section class="hero-kamon">
    <img src="/logo.png" alt="Logotipo do Conselho da Raça Shiba Inu" class="hero-logo" />
    <h1>Conselho da Raça<br>Shiba Inu do Brasil</h1>
    <p class="subtitle">
      Orientar, integrar e elevar o padrão da raça Shiba Inu no Brasil,
      respeitando suas origens e essência.
    </p>
  </section>

</BaseLayout>

<style>
  .hero-kamon {
    text-align: center;
    padding: 5rem 1rem 3rem;
  }
  .hero-logo {
    width: 420px;
    max-width: 80%;
    height: auto;
    margin: 0 auto 2.5rem;
    display: block;
  }
  .hero-kamon h1 {
    font-family: "Shippori Mincho B1", serif;
    font-size: 2.4rem;
    font-weight: 700;
    color: var(--ink-blue);
    letter-spacing: 0.4px;
    line-height: 1.3;
    margin: 0 0 1.5rem;
  }
  .subtitle {
    max-width: 640px;
    margin: 0 auto;
    color: var(--text-muted);
    font-size: 1.05rem;
    line-height: 1.8;
  }
</style>
