---
interface Props { title?: string; logoSrc?: string }
const { title = "Shiba Inu", logoSrc }: Props = Astro.props;
---
<header class="shiba-header">
  <div class="container">
    <a href="/" class="brand" aria-label="Página inicial">
      {logoSrc ? (
        <img src={logoSrc} alt="Logotipo" class="logo-img" width="28" height="28" />
      ) : (
        <span class="logo">柴</span>
      )}
      <span class="name">{title}</span>
    </a>
    <!-- Navegação desktop -->
    <nav class="nav nav-desktop">
      <a href="/sobre">Quem Somos</a>
      <a href="/eventos">Eventos</a>
      <a href="/contato">Contato</a>
    </nav>

    <!-- Navegação mobile com botão hamburger -->
    <details class="menu">
      <summary class="hamburger" aria-label="Abrir menu">
        <span class="sr">Abrir menu</span>
        <span></span>
        <span></span>
        <span></span>
      </summary>
      <nav class="nav nav-mobile">
        <a href="/sobre">Quem Somos</a>
        <a href="/eventos">Eventos</a>
        <a href="/contato">Contato</a>
      </nav>
    </details>
  </div>
</header>

<style>
  .shiba-header {
    position: sticky;
    top: 0;
    backdrop-filter: blur(6px);
    background: color-mix(in oklab, var(--bg), transparent 35%);
    border-bottom: 1px solid var(--border);
    z-index: 50;
  }
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }
  .brand {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: var(--text);
  }
  .logo {
    font-family: ui-serif, "Hiragino Mincho ProN", "Yu Mincho", serif;
    font-size: 24px;
    line-height: 1;
    background: radial-gradient(65% 65% at 50% 35%, var(--accent) 0, var(--accent-2) 60%, var(--accent-3) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  .logo-img { height: 28px; width: auto; display: block; }
  .name { font-weight: 600; letter-spacing: 0.2px; }

  /* Desktop nav */
  .nav-desktop { display: none; margin-left: auto; gap: 16px; }
  .menu { display: block; margin-left: auto; position: relative; }
  .nav a {
    color: var(--text-muted);
    text-decoration: none;
    padding: 6px 8px;
    border-radius: 6px;
  }
  .nav a:hover { background: var(--surface); color: var(--text); }

  /* Mobile menu */
  @media (max-width: 860px) {
    .nav-desktop { display: none; }
    .menu .nav { display: none; }
    .menu[open] .nav {
      display: flex;
      position: absolute;
      right: 0;
      top: calc(100% + 8px);
      background: var(--bg);
      border: 1px solid var(--border);
      border-radius: 10px;
      padding: 10px;
      flex-direction: column;
      gap: 6px;
      min-width: 220px;
      box-shadow: 0 8px 24px rgba(0,0,0,.15);
    }
    .menu .nav a { padding: 8px 12px; }
  }

  /* Show desktop nav on wide screens, hide hamburger */
  @media (min-width: 861px) {
    .nav-desktop { display: inline-flex; }
    .menu { display: none; }
  }

  /* Hamburger button styling */
  .hamburger {
    width: 32px;
    height: 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: var(--text);
  }
  .hamburger::-webkit-details-marker { display: none; }
  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: currentColor;
    border-radius: 1px;
    transition: all 0.3s ease;
  }
  .hamburger:hover span:nth-child(2) { opacity: 0.6; }
  .menu[open] > .hamburger span:nth-child(1) { transform: translateY(8px) rotate(45deg); }
  .menu[open] > .hamburger span:nth-child(2) { opacity: 0; }
  .menu[open] > .hamburger span:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

  .sr {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

